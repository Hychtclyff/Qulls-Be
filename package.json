{
  "name": "be-dev",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "db:generate": "node --import tsx node_modules/drizzle-kit/bin.cjs generate",
    "db:migrate": "node --import tsx node_modules/drizzle-kit/bin.cjs migrate",
    "db:push": "node --import tsx node_modules/drizzle-kit/bin.cjs push",
    "db:drop": "node --import tsx node_modules/drizzle-kit/bin.cjs drop",
    "db:reset": "npm run db:drop && node --import tsx node_modules/drizzle-kit/bin.cjs push --force",
    "db:seed": "npx tsx ./src/common/db/seed/index.ts",
    "db:setup": "npm run db:reset && npm run db:seed",
    "prepare": "husky install",
    "commit": "cz",
    "gen:module": "mkdir $1 && touch $1/$1.{controller,route,schema,service}.ts"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "module",
  "dependencies": {
    "@fastify/cors": "^11.2.0",
    "@fastify/env": "^5.0.3",
    "@fastify/helmet": "^13.0.2",
    "@fastify/jwt": "^10.0.0",
    "@fastify/sensible": "^6.0.4",
    "@fastify/swagger": "^9.6.1",
    "@fastify/swagger-ui": "^5.2.5",
    "@fastify/type-provider-typebox": "^6.1.0",
    "@sinclair/typebox": "^0.34.48",
    "drizzle-orm": "^0.45.1",
    "drizzle-typebox": "^0.3.3",
    "fastify": "^5.7.2",
    "pg": "^8.18.0",
    "postgres": "^3.4.8",
    "typescript-eslint": "^8.54.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.4.0",
    "@commitlint/config-conventional": "^20.4.0",
    "@types/node": "^25.1.0",
    "@types/pg": "^8.16.0",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "drizzle-kit": "^0.31.8",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "husky": "^8.0.0",
    "lint-staged": "^16.2.7",
    "pino-pretty": "^13.1.3",
    "prettier": "^3.8.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
